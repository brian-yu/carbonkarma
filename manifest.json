{
  "name": "ReCommerce",
  "version": "1.0",
  "description": "Learn about Amazon's environmental impact.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/gp/cart/*"],
      "css": ["amazon_cart.css"],
      "run_at": "document_idle",
      "js": ["amazon_cart.js"]
    },
    {
      "matches": [
        "https://www.amazon.com/*/gp/*",
        "https://www.amazon.com/gp/*",
        "https://www.amazon.com/*/dp/*",
        "https://www.amazon.com/dp/*"
      ],
      "run_at": "document_idle",
      "js": ["amazon_product.js"]
    }
  ],
  "web_accessible_resources": [
    "data/mapping.json"
  ],
  "manifest_version": 2
}
